# Database Configuration
# Separate password variable for better security and maintainability
DB_PASSWORD=your-long-database-password-here
DATABASE_URI=postgresql://username:${DB_PASSWORD}@localhost:5432/sciss_db

# For Render deployment with pool transaction settings
# DATABASE_URI=postgresql://username:${DB_PASSWORD}@your-render-host:5432/sciss_db?sslmode=require&pool_timeout=20&connection_limit=20

# Payload CMS Configuration
PAYLOAD_SECRET=your-super-secret-key-here
NEXT_PUBLIC_SERVER_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000

# S3/R2 Storage Configuration
R2_BUCKET=your-bucket-name
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/payload
NEXT_PUBLIC_BASE_PATH=

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=SCISS
NEXT_PUBLIC_APP_URL=http://localhost:3000

# SEO Configuration
NEXT_PUBLIC_SITE_NAME=SCISS - Springfield Commonwealth International Summer School
NEXT_PUBLIC_SITE_DESCRIPTION=Join SCISS for an unforgettable summer experience with cutting-edge academics, exciting activities, and trips to Harvard, MIT, and Yale.

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_GTM_ID=

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
