{
  "name": "sciss-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --port 3001",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf .next out node_modules/.cache",
    "fresh": "pnpm run clean && pnpm install",
    "deploy:dev": "rm -rf .next dist && NODE_ENV=production pnpm run build",
    "deploy:prod": "rm -rf .next dist && NODE_ENV=production NEXT_PUBLIC_API_URL=https://sciss.org/api pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze:css": "node scripts/analyze-css.js",
    "analyze:css:watch": "node scripts/analyze-css.js --watch",
    "optimize:css": "node scripts/css-optimizer.js",
    "payload": "payload",
    "payload:generate:types": "payload generate:types",
    "payload:generate:graphQLSchema": "payload generate:graphQLSchema",
    "payload:migrate": "payload migrate",
    "payload:migrate:create": "payload migrate:create",
    "payload:migrate:fresh": "payload migrate:fresh",
    "payload:migrate:reset": "payload migrate:reset",
    "db:setup": "node scripts/setup-database.js",
    "db:test": "DATABASE_URI=postgresql://test:test@localhost:5432/test node scripts/setup-database.js",
    "migrate:v3": "node scripts/migrate-to-v3.js",
    "migrate:content": "node scripts/migrate-content-architecture.js",
    "migrate:content:payload": "node scripts/migrate-content-to-payload.mjs",
    "export:content": "node scripts/export-content-for-admin.js",
    "fix:migration": "node scripts/fix-migration-issues.js",
    "setup:env": "node scripts/setup-env.js",
    "test:endpoints": "node scripts/test-endpoints.js"
  },
