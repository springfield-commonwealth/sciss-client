{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022",
      "ES2023.Array",
      "ES2024.Object",
      "WebWorker"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "useDefineForClassFields": true,

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "allowArbitraryExtensions": false,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    /* Emit */
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": true,
    "newLine": "lf",

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "useUnknownInCatchVariables": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "noImplicitOverride": false,
    "noPropertyAccessFromIndexSignature": false,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": false,
    "maxNodeModuleJsDepth": 1,

    /* Performance */
    "skipLibCheck": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/src/*"] /* Absolute imports */,
      "@/components/*": ["app/src/components/*"] /* Component imports */,
      "@/lib/*": ["app/src/lib/*"] /* Library imports */,
      "@/styles/*": ["app/src/styles/*"] /* Style imports */,
      "@/public/*": ["./public/*"] /* Public asset imports */,
      "@/utils/*": ["app/src/utils/*"] /* Utility imports */,
      "@/hooks/*": ["app/src/hooks/*"] /* Custom hooks */,
      "@/types/*": ["app/src/types/*"] /* Type definitions */,
      "@/data/*": ["app/src/data/*"],
      "@/constants/*": ["app/src/constants/*"],
      "@/api/*": ["app/src/api/*"],
      "@/collections/*": ["./payload/collections/*"] /* Payload collections */,
      "@/app/*": ["./app/*"] /* App directory imports */,
      "@/app/(frontend)/*": ["./app/(frontend)/*"] /* Frontend pages */,
      "@/app/api/*": ["./app/api/*"] /* API routes */,
      "@/payload/*": ["./payload/*"] /* Payload specific files */
    },

    /* Next.js Specific */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* File Inclusion */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mts",
    "**/*.cts",
    ".next/types/**/*.ts",
    "babel.config.js.bak"
  ],

  /* File Exclusion */
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "cypress",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.js",
    "**/*.test.jsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.spec.js",
    "**/*.spec.jsx"
  ],

  /* TypeScript-ESLint Integration */
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  }
}
